package by.devincubator.usersacc;

import by.devincubator.usersacc.entity.User;
import by.devincubator.usersacc.service.UserService;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.List;

@WebServlet({"/ViewServlet"})
public class ViewServlet extends HttpServlet {
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        response.setContentType("text/html");
        PrintWriter out = response.getWriter();
        out.println("<a href='index.jsp'>Users and accounts</a>");
        out.println("<h1>Users list</h1>");

        UserService userService = new UserService();
        List<User> list = userService.getAll();

        out.print("<table border='1'");
        out.print("<tr><th>Id</th><th>Name</th><th>Surename</th><th>Edit</th><th>Delete</th></tr>");
        for (User user : list) {
            out.print("<tr><td>" + user.getUserId() + "</td><td>" + user.getName() + "</td><td>" + user.getSureName() + "</td>" +
                    "<td><a href='EditServlet?id=" + user.getUserId() + "'>edit</a></td>" +
                    "<td><a href='DeleteServlet?id=" + user.getUserId() + "'>delete</a></td></tr>");
        }
        out.print("</table>");

        out.close();
    }
}